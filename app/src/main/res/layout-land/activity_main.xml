<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CalculatorStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="5"
    android:useDefaultMargins="true"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/symbol_text_view"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:fontFamily="sans-serif-light"
        android:gravity="start|center"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:textColor="@color/white"
        android:textSize="@dimen/operation_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/result"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_rowWeight="1"
        android:layout_columnSpan="3"
        android:layout_columnWeight="3"
        android:layout_marginTop="@dimen/margin_result"
        android:fontFamily="sans-serif-light"
        android:gravity="center|end"
        android:hint="@string/result"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/initial_result"
        android:textColor="@color/white"
        android:textSize="@dimen/result_text_size" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key_clear"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/key_clear"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="@dimen/buttons_corner" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key_reverse"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/key_reverse"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="@dimen/buttons_corner" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key_percent"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/key_percent"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="@dimen/buttons_corner" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key_del"
        android:layout_width="@dimen/layout_size"
